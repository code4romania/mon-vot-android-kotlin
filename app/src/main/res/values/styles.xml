<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/backgroundLight</item>
        <item name="primaryTextColor">@color/textPrimary</item>
        <item name="buttonColor">@color/purple</item>
        <item name="colorButtonNormal">@color/purple</item>
        <item name="android:colorButtonNormal">@color/purple</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Login" parent="AppTheme.NoActionBar">
        <item name="colorAccent">@color/purple</item>
        <item name="colorControlActivated">@color/purple</item>
    </style>

    <style name="AppTheme.Onboarding" parent="AppTheme.NoActionBar">
        <item name="colorAccent">@color/darkPurple</item>
        <item name="buttonColor">@color/darkPurple</item>
        <item name="android:windowBackground">@color/bgColorOnboarding</item>
    </style>

    <style name="AlertDialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorAccent">@color/purple</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color_selector</item>
        <item name="android:maxLines">1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:padding">@dimen/margin</item>
        <item name="backgroundTint">@color/button_selector</item>
    </style>

    <style name="Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">@dimen/xsmall_margin</item>
        <item name="android:paddingBottom">@dimen/xsmall_margin</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/text_color_selector</item>
        <item name="iconTint">@color/text_color_selector</item>
        <item name="backgroundTint">@color/text_button_selector</item>
        <item name="autoSizeMaxTextSize">14sp</item>
        <item name="iconPadding">@dimen/margin</item>
        <item name="rippleColor">@null</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="Button.Text.PrimaryColor">
        <item name="buttonColor">?attr/colorPrimary</item>
    </style>

    <style name="Button.Text.Onboarding">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">@dimen/margin</item>
        <item name="autoSizeTextType">none</item>
    </style>

    <style name="Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:fontFamily">sans-serif-medium</item>

    </style>

    <style name="Text.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Title.Big">
        <item name="android:textSize">22sp</item>
        <item name="autoSizeMaxTextSize">22sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Date">
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">0.2</item>
    </style>

    <style name="Text.PollingStation">
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="Text.PollingStationSelectLabel">
        <item name="android:textSize">16sp</item>

    </style>

    <style name="Text.Option">
        <item name="android:background">@drawable/background_input</item>
        <item name="android:padding">@dimen/margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">@color/hint</item>
    </style>

    <style name="Text.Sync">
        <item name="android:textColor">@color/syncProgress</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Label">
        <item name="android:alpha">0.4</item>
    </style>

    <style name="Text.Label.Small">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Section">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-bold</item>
        <item name="android:alpha">0.3</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Label.Big">
        <item name="android:fontFamily">sans-serif-bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:alpha">0.2</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Text.Question">
        <item name="android:textSize">24sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">24sp</item>
        <item name="android:lines">3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-bold</item>
        <item name="autoSizeStepGranularity">2sp</item>
    </style>

    <style name="Text.Onboarding">
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="android:textSize">16sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">16sp</item>
    </style>

    <style name="Text.Spinner">
        <item name="android:padding">@dimen/small_margin</item>
    </style>


    <style name="Input" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/Text</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:padding">@dimen/small_margin</item>
        <item name="android:background">@drawable/background_input</item>
    </style>

    <style name="Input.Note">
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:lines">8</item>
        <item name="android:maxLines">8</item>
        <item name="android:minLines">8</item>
        <item name="android:gravity">top</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:overScrollMode">always</item>
        <item name="android:scrollbarStyle">insideInset</item>
    </style>

    <style name="MaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">@dimen/elevation</item>
        <item name="cardBackgroundColor">@color/cardColor</item>
    </style>

    <style name="NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemTextAppearance">@style/NavigationMenuItem</item>
        <item name="itemIconTint">@color/menu_icon_selector</item>
        <item name="itemTextColor">?attr/primaryTextColor</item>
        <item name="itemHorizontalPadding">@dimen/xbig_margin</item>
        <item name="itemIconPadding">@dimen/margin</item>
        <item name="itemPadding">@dimen/margin</item>
        <item name="itemIconSize">@dimen/sync_icon_size</item>
        <item name="android:background">@color/menuBackground</item>
    </style>

    <style name="NavigationMenuItem" parent="Text">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:background">@drawable/radio_button</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/question_option_text</item>
    </style>

    <style name="CheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:background">@drawable/radio_button</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/question_option_text</item>
    </style>

    <style name="TextInputLayoutLogin" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintEnabled">false</item>
        <item name="boxStrokeColor">@color/text_input_box</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopStart">2dp</item>
        <item name="boxCornerRadiusBottomEnd">2dp</item>
        <item name="boxCornerRadiusBottomStart">2dp</item>
        <item name="boxCornerRadiusTopEnd">2dp</item>

    </style>

    <style name="InputLogin" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/margin</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/login_text_size</item>
    </style>

    <style name="Progress" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/syncComplete</item>
        <item name="android:progressBackgroundTint">@color/incompleteForm</item>
        <item name="android:progressDrawable">@drawable/complete_form_progress</item>
    </style>


    <dimen name="medium_margin">12dp</dimen>
</resources>
