<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/backgroundLight</item>
        <item name="primaryTextColor">@color/textPrimary</item>
        <item name="buttonTextColor">@color/purple</item>
        <item name="buttonColor">@color/buttonBgColor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Login" parent="AppTheme.NoActionBar">
        <item name="android:colorControlNormal">@color/textLight</item>
        <item name="android:colorControlActivated">?attr/colorAccent</item>
        <item name="android:colorControlHighlight">?attr/colorAccent</item>
        <item name="buttonColor">?attr/colorAccent</item>
        <item name="buttonTextColor">@color/textLight</item>
    </style>

    <style name="AppTheme.Onboarding" parent="AppTheme.NoActionBar">
        <item name="colorAccent">@color/darkPurple</item>
        <item name="android:windowBackground">@color/bgColorOnboarding</item>
    </style>

    <style name="Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/buttonTextColor</item>
        <item name="android:maxLines">1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:padding">@dimen/margin</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>

    <style name="Button.Black">
        <item name="android:textColor">?attr/buttonTextColor</item>
        <item name="android:background">@drawable/bg_button_dark</item>
    </style>

    <style name="Button.Link">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@null</item>
        <item name="android:paddingTop">@dimen/xsmall_margin</item>
        <item name="android:paddingBottom">@dimen/xsmall_margin</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Button.Link.Purple">
        <item name="android:textAllCaps">false</item>
        <item name="android:drawablePadding">@dimen/margin</item>
        <item name="android:textColor">@color/purple</item>
    </style>

    <style name="Button.Link.Onboarding">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">@dimen/margin</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="autoSizeTextType">none</item>
    </style>

    <style name="Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:fontFamily">sans-serif-medium</item>

    </style>

    <style name="Text.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Title.Big">
        <item name="android:textSize">22sp</item>
        <item name="autoSizeMaxTextSize">22sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Text.Date">
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">0.2</item>
    </style>

    <style name="Text.PollingStation">
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="Text.PollingStationSelectLabel">
        <item name="android:textSize">16sp</item>

    </style>

    <style name="Text.Option">
        <item name="android:background">@drawable/background_input</item>
        <item name="android:padding">@dimen/margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">@color/hint</item>
    </style>

    <style name="Text.Sync">
        <item name="android:textColor">@color/syncProgress</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Label">
        <item name="android:alpha">0.4</item>
    </style>

    <style name="Text.Label.Small">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Section">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-bold</item>
        <item name="android:alpha">0.3</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Label.Big">
        <item name="android:fontFamily">sans-serif-bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:alpha">0.2</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Text.Question">
        <item name="android:textSize">24sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">24sp</item>
        <item name="android:lines">3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-bold</item>
        <item name="autoSizeStepGranularity">2sp</item>
    </style>

    <style name="Text.Onboarding">
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="android:textSize">16sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">16sp</item>
    </style>


    <style name="Input" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/Text</item>
        <item name="android:inputType">textCapSentences</item>
    </style>

    <style name="Input.Note">
        <item name="android:background">@drawable/bg_note_input</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:lines">8</item>
        <item name="android:maxLines">8</item>
        <item name="android:minLines">8</item>
        <item name="android:gravity">top</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:overScrollMode">always</item>
        <item name="android:scrollbarStyle">insideInset</item>
    </style>

    <style name="MaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardBackgroundColor">@color/cardColor</item>
    </style>

    <style name="NavigationMenuItem">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/navigationMenuItemText</item>
    </style>

    <style name="RadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:background">@drawable/radio_button</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/question_option_text</item>
    </style>

    <style name="CheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:background">@drawable/radio_button</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/question_option_text</item>
    </style>


    <style name="InputLogin" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:background">@drawable/background_input_login</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:textColorHint">?attr/primaryTextColor</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/login_text_size</item>
    </style>

    <style name="Progress" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/syncComplete</item>
        <item name="android:progressBackgroundTint">@color/incompleteForm</item>
        <item name="android:progressDrawable">@drawable/complete_form_progress</item>
    </style>


    <dimen name="medium_margin">12dp</dimen>
</resources>
